<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
  version="2.5">
  <servlet>
    <servlet-name>userServlet</servlet-name>
    <servlet-class>fr.polytech.UserInformationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>userServlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>InitUserDbServlet</servlet-name>
    <servlet-class>fr.polytech.InitUserDbServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InitUserDbServlet</servlet-name>
    <url-pattern>/initDb</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserScoreServlet</servlet-name>
    <servlet-class>fr.polytech.UserScoreServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserScoreServlet</servlet-name>
    <url-pattern>/score</url-pattern>
  </servlet-mapping>
</web-app>
